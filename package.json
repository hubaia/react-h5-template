{
  "private": true,
  "scripts": {
    "start": "SET NODE_OPTIONS=--openssl-legacy-provider && umi dev",
    "build": "SET NODE_OPTIONS=--openssl-legacy-provider && umi build",
    "postinstall": "SET NODE_OPTIONS=--openssl-legacy-provider && umi generate tmp",
    "lint": "SET NODE_OPTIONS=--openssl-legacy-provider && umi g tmp && npm run lint:js && npm run lint:style && npm run lint:prettier && npm run tsc",
    "lint-staged": "SET NODE_OPTIONS=--openssl-legacy-provider && lint-staged",
    "lint-staged:js": "SET NODE_OPTIONS=--openssl-legacy-provider && eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "SET NODE_OPTIONS=--openssl-legacy-provider && eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "SET NODE_OPTIONS=--openssl-legacy-provider && eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "SET NODE_OPTIONS=--openssl-legacy-provider && prettier -c --write \"src/**/*\" --end-of-line auto",
    "lint:style": "SET NODE_OPTIONS=--openssl-legacy-provider && stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "SET NODE_OPTIONS=--openssl-legacy-provider && prettier -c --write \"src/**/*\"",
    "test": "SET NODE_OPTIONS=--openssl-legacy-provider && umi-test",
    "test:coverage": "SET NODE_OPTIONS=--openssl-legacy-provider && umi-test --coverage",
    "deps": "SET NODE_OPTIONS=--openssl-legacy-provider && yarn upgrade-interactive --latest"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "fabric verify-commit"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "antd-mobile": "^5.24.0",
    "antd-mobile-icons": "^0.3.0",
    "hox": "^1.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "umi": "^3.5.23",
    "umi-plugin-keep-alive": "^0.0.1-beta.34"
  },
  "devDependencies": {
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.14",
    "@umijs/fabric": "^3.0.0",
    "@umijs/preset-react": "^2.1.6",
    "@umijs/test": "^3.5.23",
    "eruda": "^2.5.0",
    "lint-staged": "^13.0.3",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.7.1",
    "stylelint": "13.0.0",
    "typescript": "^4.6.4",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "@types/react": "17.0.44"
  }
}
